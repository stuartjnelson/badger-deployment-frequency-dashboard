{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "backend",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["backend/**/*.ts", "backend/config.ts"],
  "exclude": ["node_modules"]
}
